ARG OPENJDK_VERSION=24
FROM openjdk:$OPENJDK_VERSION

# Buildtime arguments
ARG PAPER_URL
ARG MC_USER_ID=10001
ARG MC_USER=mc
ARG MC_HOME_DIR=/home/$MC_USER
ARG MC_DATA_DIR=/home/$MC_USER/data

RUN useradd -lmUu ${MC_USER_ID} ${MC_USER}

USER ${MC_USER}
WORKDIR ${MC_HOME_DIR}

# RUN echo ${PAPER_URL} && echo ${MC_HOME_DIR} && echo ${MC_DATA_DIR}

RUN curl -o paper.jar -sL "${PAPER_URL}" && \
mkdir ${MC_DATA_DIR}

WORKDIR ${MC_DATA_DIR}

EXPOSE 25565
# This is used as the default entrypoint
ENTRYPOINT [ "/bin/bash", "-c" ]
# Users may modify flags and launch options but should use defaults instead
CMD [ "/usr/bin/java -Xmx${MEMORY_LIMIT:-500m} -Xms${MEMORY_START:-100m} -XX:+AlwaysPreTouch -XX:+DisableExplicitGC -XX:+ParallelRefProcEnabled -XX:+PerfDisableSharedMem -XX:+UnlockExperimentalVMOptions -XX:+UseG1GC -XX:G1HeapRegionSize=8M -XX:G1HeapWastePercent=5 -XX:G1MaxNewSizePercent=40 -XX:G1MixedGCCountTarget=4 -XX:G1MixedGCLiveThresholdPercent=90 -XX:G1NewSizePercent=30 -XX:G1RSetUpdatingPauseTimePercent=5 -XX:G1ReservePercent=20 -XX:InitiatingHeapOccupancyPercent=15 -XX:MaxGCPauseMillis=200 -XX:MaxTenuringThreshold=1 -XX:SurvivorRatio=32 -Dusing.aikars.flags=https://mcflags.emc.gs -Daikars.new.flags=true -jar ${HOME}/paper.jar nogui" ]
